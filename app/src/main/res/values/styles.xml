<!-- res/values/styles.xml -->
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Top App Bar theme -->
    <style name="TopAppBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Bottom Navigation Bar theme -->
    <style name="BottomNavBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
    </style>
    <style name="ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <style name="IconButton">
        <item name="android:tint">#ffffff</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="ButtonRoundedSquare">
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="FriendImageStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FriendUsernameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <style name="DeleteButtonStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:drawableLeft">@drawable/ic_delete</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="ConfirmButtonStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:drawableLeft">@drawable/ic_check</item>
        <item name="android:radius">16dp</item>
    </style>
</resources>
